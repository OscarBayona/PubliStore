<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>inicioSesion</servlet-name>
        <servlet-class>controller.inicioSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addUsuario</servlet-name>
        <servlet-class>controller.addUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cerrarSesion</servlet-name>
        <servlet-class>controller.cerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mostrarServ</servlet-name>
        <servlet-class>controller.mostrarServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>comprar</servlet-name>
        <servlet-class>controller.comprar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mostrarFactura</servlet-name>
        <servlet-class>controller.mostrarFactura</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>form</servlet-name>
        <servlet-class>controller.form</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eliminar</servlet-name>
        <servlet-class>controller.eliminar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>inicioSesion</servlet-name>
        <url-pattern>/inicioSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addUsuario</servlet-name>
        <url-pattern>/addUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cerrarSesion</servlet-name>
        <url-pattern>/cerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mostrarServ</servlet-name>
        <url-pattern>/mostrarServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>comprar</servlet-name>
        <url-pattern>/cliente/comprar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mostrarFactura</servlet-name>
        <url-pattern>/mostrarFactura</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>form</servlet-name>
        <url-pattern>/admin/form.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eliminar</servlet-name>
        <url-pattern>/admin/eliminar.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
